<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="recruitment.iiitd.edu.microphone_app.TwoFragment">

<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="150dp"
        android:background="@drawable/trial"
        android:orientation="vertical">
        <ImageView
            android:background="#92c5e2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:alpha="0.5"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <AnalogClock
            android:id="@+id/simpleAnalogClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="@color/abc_background_cache_hint_selector_material_dark"

            android:padding="50dp"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select day : "
            android:textColor="#FFFFFF"
            android:layout_marginLeft="100dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/simpleAnalogClock"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <Spinner
            android:id="@+id/datespinner"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/color_button"
            android:layout_alignTop="@+id/text"
            android:layout_toEndOf="@+id/text"
            android:layout_marginStart="31dp"
            android:layout_toRightOf="@+id/text" />


        <TextView
            android:id="@+id/day_FloorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Floor : "
            android:layout_marginTop="240dp"
            android:layout_marginLeft="100dp"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"

            />
        <Spinner
            android:id="@+id/day_FloorSpinner"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="470dp"
            android:layout_marginTop="230dp"

            android:background="@drawable/color_button"
            android:layout_alignParentStart="false"

            android:textColor="#ffffff"
            android:layout_alignParentLeft="false" />


        <Button
            android:id="@+id/showMapButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/color_button"
            android:text="SHOW HEAT MAP"
            android:textColor="#ffffff"
            android:layout_marginTop="98dp"
            android:textSize="20sp"
            android:layout_below="@+id/datespinner"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</FrameLayout>
</ScrollView>